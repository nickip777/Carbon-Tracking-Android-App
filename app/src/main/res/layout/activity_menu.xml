<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.nick.carbontracker.UI.MenuActivity">

    <Button
        android:id="@+id/moreGraphButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/graphButton"
        android:layout_alignParentStart="true"
        android:background="@drawable/more_graphs"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" />

    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addJourneyButton"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/carbon_tracker"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/graphButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/footprint_graph"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/viewFootprintButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/journey_list"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/monthlyUtilitiesButton" />

    <Button
        android:id="@+id/addJourneyButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageView5"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/monthlyUtilitiesButton"
        android:background="@drawable/add_journey"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:paddingBottom="15dp"
        app:srcCompat="@drawable/carbonn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/monthlyUtilitiesButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/monthly_utilities"
        android:layout_below="@+id/menuTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/about"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="@string/title"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/addJourneyButton" />


</RelativeLayout>

