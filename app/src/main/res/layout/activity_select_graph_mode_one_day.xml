<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.nick.carbontracker.UI.oneDayGraph.SelectGraphModeOneDay">

    <Button
        android:id="@+id/modeGraphOneDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/routeGraphOneDay"
        android:layout_alignBottom="@+id/routeGraphOneDay"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="0dp"
        android:layout_toStartOf="@+id/routeGraphOneDay"
        android:text="@string/mode" />

    <Button
        android:id="@+id/routeGraphOneDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="83dp" />

</RelativeLayout>
